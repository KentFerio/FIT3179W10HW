{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Immigrant Entry by State (Thousands)",
  "width": 600,
  "height": 380,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W10HW/main/FIT3179W10HW.csv"
  },
  "params": [
    { "name": "selected_state", "value": "All" }
  ],
  "transform": [
    { "filter": "selected_state == 'All' || datum.State == selected_state" },
    { "calculate": "datum['Immigrant Entry']/1000", "as": "ImmThousands" }
  ],
  "mark": { "type": "line", "point": true },
  "encoding": {
    "x": { "field": "Year", "type": "ordinal", "title": "Year", "sort": "ascending" },
    "y": {
      "aggregate": "sum",
      "field": "ImmThousands",
      "type": "quantitative",
      "title": "Immigrant Entry (thousands)",
      "axis": { "format": ".0f" }
    },
    "color": { "field": "State", "type": "nominal", "title": "State" },
    "tooltip": [
      { "field": "State", "title": "State" },
      { "field": "Year", "title": "Year" },
      { "aggregate": "sum", "field": "ImmThousands", "title": "Immigrant Entry (k)", "format": ".0f" }
    ]
  }
}
