{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Population by State (Million)",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W10HW/main/FIT3179W10HW.csv"
  },
  "params": [
    {"name": "selected_state", "value": "All"}
  ],
  "transform": [
    {
      "filter": "selected_state == 'All' || datum.State == selected_state"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "aggregate": "sum",
      "field": "Population",
      "type": "quantitative",
      "title": "Total Population (Million)",
      "axis": {"format": "s"},
      "scale": {"domain": [0, 2e7]}
    },
    "color": {"field": "State", "type": "nominal"},
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Year", "title": "Year"},
      {"aggregate": "sum", "field": "Population", "title": "Population", "format": ","}
    ]
  }
}
