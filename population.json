{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": "Total Population by Year (Filtered by State or All)",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W10HW/refs/heads/main/FIT3179W10HW.csv"
  },
  "params": [
    {
      "name": "selected_state",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],
  "transform": [
    {"filter": "selected_state == 'All' || datum.State == selected_state"},
    {"calculate": "datum.Total / 1000000", "as": "TotalMillions"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "field": "TotalMillions",
      "type": "quantitative",
      "title": "Total Population (millions)",
      "axis": {"format": ".1f"}
    },
    "color": {"field": "State", "type": "nominal", "title": "State"},
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Year", "title": "Year"},
      {
        "field": "TotalMillions",
        "title": "Population (millions)",
        "format": ".2f"
      }
    ]
  },
  "config": {}
}