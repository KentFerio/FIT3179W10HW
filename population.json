{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Population by State (Million)",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W10HW/main/FIT3179W10HW.csv"
  },
  "params": [
    {
      "name": "selected_state",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "labels": [
          "All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      },
      "value": "All"
    }
  ],
  "transform": [
    {
      "filter": "selected_state == 'All' || datum.State == selected_state"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "aggregate": "sum",
      "field": "Total",
      "type": "quantitative",
      "title": "Total Population (Million)",
      "axis": {"format": "s"},
      "scale": {"domain": [0, 2e7]}
    },
    "color": {"field": "State", "type": "nominal"},
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Year", "title": "Year"},
      {"aggregate": "sum", "field": "Total", "title": "Population", "format": ","}
    ]
  }
}
