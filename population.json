{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Population by State (Million)",
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/KentFerio/FIT3179W10HW/main/FIT3179W10HW.csv"
  },
  "params": [
    {
      "name": "selected_state",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],
  "transform": [
    {
      "filter": "selected_state == 'All' || datum.State == selected_state"
    },
    {
      "calculate": "datum.Population / 1000000",
      "as": "Population_Million"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year"},
    "y": {
      "aggregate": "sum",
      "field": "Population_Million",
      "type": "quantitative",
      "title": "Total Population (Million)",
      "axis": {"format": ".1f"}
    },
    "color": {"field": "State", "type": "nominal"},
    "tooltip": [
      {"field": "State", "title": "State"},
      {"field": "Year", "title": "Year"},
      {
        "aggregate": "sum",
        "field": "Population_Million",
        "title": "Population (Million)",
        "format": ".1f"
      }
    ]
  }
}
